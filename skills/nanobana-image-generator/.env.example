# Nano Banana Image Generator Configuration
# Copy this file to .env and update with your API key

# Google AI API
GOOGLE_API_KEY=your_google_api_key_here

# Model Configuration
DEFAULT_MODEL=gemini-2.5-flash-image
# Options: gemini-2.5-flash-image (standard), gemini-3-pro-image-preview (pro)

DEFAULT_ASPECT_RATIO=1:1
# Options: 1:1, 16:9, 21:9, 9:16, 4:3, 3:4, etc.

DEFAULT_RESOLUTION=2K
# Options: 1K, 2K, 4K

# Search Configuration
ENABLE_GOOGLE_SEARCH=false
# Set to true to enable Google Search grounding for real-time data

SEARCH_REGION=US
# Region for search grounding

# Output Configuration
OUTPUT_DIR=outputs/images
# Directory to save generated images

IMAGE_FORMAT=png
# Image file format

SAVE_METADATA=true
# Include generation metadata (prompt, model, resolution)

# Image Generation Settings
MAX_REFERENCE_IMAGES=14
# Maximum reference images for multi-turn editing

ENABLE_THINKING_MODE=true
# Enable thinking mode for complex prompts

# File Handling
AUTO_OPEN_IMAGES=false
# Auto-open images after generation (macOS/Linux only)

LOG_GENERATED_IMAGES=true
# Log all generated images to log file

# API Configuration
API_TIMEOUT_SECONDS=120
# Timeout for API requests

MAX_RETRIES=3
# Maximum retry attempts for failed requests

RETRY_DELAY_SECONDS=5
# Delay between retry attempts
