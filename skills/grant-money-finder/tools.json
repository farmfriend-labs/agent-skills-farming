{
  "name": "grant-money-finder",
  "version": "1.0.0",
  "description": "Find and track agricultural grants, funding opportunities, and financial assistance programs",
  "author": "FarmFriend Terminal Labs",
  "license": "MIT",
  "category": "Tier 2 - Mid-Size Production Farms",
  "keywords": [
    "grants",
    "funding",
    "cost-share",
    "usda",
    "conservation",
    "financial-assistance"
  ],

  "dependencies": [
    {
      "name": "python3",
      "version": ">= 3.8",
      "required": true
    },
    {
      "name": "sqlite3",
      "version": ">= 3.0",
      "required": true
    },
    {
      "name": "requests",
      "version": ">= 2.26",
      "required": true
    },
    {
      "name": "beautifulsoup4",
      "version": ">= 4.9",
      "required": false
    },
    {
      "name": "pandas",
      "version": ">= 1.3",
      "required": false
    }
  ],

  "tools": [
    {
      "name": "init-grant-db",
      "description": "Initialize grant database",
      "command": "python3 scripts/init_database.py"
    },
    {
      "name": "create-farm-profile",
      "description": "Create farm profile for eligibility matching",
      "command": "python3/scripts/create_farm_profile.py"
    },
    {
      "name": "search-grants",
      "description": "Search for grants by criteria",
      "command": "python3/scripts/search_grants.py"
    },
    {
      "name": "check-eligibility",
      "description": "Check eligibility for specific grants",
      "command": "python3/scripts/check_eligibility.py"
    },
    {
      "name": "create-application",
      "description": "Create grant application tracker",
      "command": "python3/scripts/create_application.py"
    },
    {
      "name": "track-deadlines",
      "description": "Show upcoming grant deadlines",
      "command": "python3/scripts/track_deadlines.py"
    },
    {
      "name": "generate-narrative",
      "description": "Generate grant application narrative",
      "command": "python3/scripts/generate_narrative.py"
    },
    {
      "name": "calculate-match",
      "description": "Calculate matching fund requirements",
      "command": "python3/scripts/calculate_match.py"
    },
    {
      "name": "import-grants",
      "description": "Import grants from APIs or files",
      "command": "python3/scripts/import_grants.py"
    },
    {
      "name": "sync-databases",
      "description": "Sync with external grant databases",
      "command": "python3/scripts/sync_databases.py"
    }
  ],

  "grant_types": [
    "federal",
    "state",
    "nonprofit",
    "private"
  ],

  "grant_categories": [
    "equipment",
    "conservation",
    "business-development",
    "research",
    "energy",
    "disaster"
  ],

  "configuration": {
    "notification_days_before_deadline": 14,
    "auto_sync_interval_days": 7,
    "backup_enabled": true
  },

  "documentation": {
    "main": "SKILL.md",
    "examples": [
      "examples/find-grants.md",
      "examples/application-tracking.md",
      "examples/eligibility-check.md"
    ]
  },

  "troubleshooting": {
    "common_issues": [
      "Eligibility confusion",
      "Application rejected",
      "Missing deadlines",
      "API access issues"
    ],
    "see_also": "SKILL.md#troubleshooting"
  }
}
