# Seed Sovereignty Guide Environment Variables

# Seed Storage Monitoring
STORAGE_TEMP_CELSIUS=5  # Ideal: 5-10°C (40-50°F)
STORAGE_HUMIDITY_PCT=50  # Ideal: 40-60%
STORAGE_MONITOR_INTERVAL_HOURS=24

# Database Configuration
SEED_DB_PATH=/opt/seed-sovereignty/seeds.db
GERMINATION_LOG_PATH=/opt/seed-sovereignty/germination.log

# Alerts
ALERT_TEMP_MIN_CELSIUS=0
ALERT_TEMP_MAX_CELSIUS=15
ALERT_HUMIDITY_MIN_PCT=30
ALERT_HUMIDITY_MAX_PCT=70

# Exchange Integration
ENABLE_SEED_EXCHANGE=false
SEED_EXCHANGE_API_URL=https://api.seed-exchange.org/v1
SEED_EXCHANGE_API_KEY=your_api_key_here

# Configuration
DEFAULT_VIABILITY_YEARS=3
MINIMUM_GERMINATION_PCT=70
RECOMMEND_REPLACEMENT_YEARS=4

# Data Export
EXPORT_FORMAT=json
EXPORT_PATH=/var/lib/seed-sovereignty/exports
