{
  "name": "plug-and-play-precision-ag",
  "version": "1.0.0",
  "description": "Simple precision agriculture setup for mid-size production farms",
  "author": "FarmFriend Terminal Labs",
  "license": "MIT",
  "category": "Tier 2 - Mid-Size Production Farms",
  "keywords": [
    "precision agriculture",
    "GPS",
    "variable rate",
    "yield monitoring",
    "guidance",
    "RTK",
    "ISOBUS"
  ],

  "dependencies": [
    {
      "name": "python3",
      "version": ">= 3.8",
      "required": true
    },
    {
      "name": "sqlite3",
      "version": ">= 3.0",
      "required": true
    },
    {
      "name": "gdal",
      "version": ">= 3.0",
      "required": true
    },
    {
      "name": "gpsbabel",
      "version": ">= 1.7",
      "required": false
    },
    {
      "name": "qgis",
      "version": ">= 3.16",
      "required": false
    }
  ],

  "python_packages": [
    "pyserial>=3.5",
    "pyproj>=3.2",
    "shapely>=1.8",
    "geopandas>=0.10",
    "requests>=2.26",
    "pandas>=1.3",
    "numpy>=1.21",
    "matplotlib>=3.4"
  ],

  "hardware": [
    {
      "name": "GPS Receiver",
      "options": [
        "Trimble AG-372",
        "Hemisphere R330",
        "Raven Slingshot"
      ],
      "required": true
    },
    {
      "name": "Tablet/Display",
      "options": [
        "iPad Pro",
        "Samsung Galaxy Tab",
        "Windows Tablet",
        "Rugged Android Tablet"
      ],
      "required": true
    },
    {
      "name": "RTK Correction Source",
      "options": [
        "RTK Network",
        "Base Station",
        "WAAS/EGNOS (free, lower accuracy)"
      ],
      "required": false
    },
    {
      "name": "CAN/ISOBUS Interface",
      "options": [
        "Peak PCAN-USB",
        "Kvaser Leaf",
        "Intrepid ValueCAN"
      ],
      "required": false
    }
  ],

  "tools": [
    {
      "name": "setup-gps",
      "description": "Configure GPS receiver and test connection",
      "command": "scripts/setup.sh",
      "params": ["port", "baudrate", "correction_source"]
    },
    {
      "name": "create-field-boundary",
      "description": "Create GPS-driven field boundary",
      "command": "python3 scripts/field_manager.py",
      "params": ["field_name", "gps_source"]
    },
    {
      "name": "setup-guidance",
      "description": "Set up guidance lines for field",
      "command": "python3 scripts/guidance.py",
      "params": ["field_id", "guidance_type", "spacing"]
    },
    {
      "name": "create-prescription",
      "description": "Create variable rate prescription map",
      "command": "python3 scripts/prescription.py",
      "params": ["field_id", "input_type", "zones"]
    },
    {
      "name": "monitor-operation",
      "description": "Monitor real-time field operation",
      "command": "python3 scripts/monitor.py",
      "params": ["field_id", "operation_type"]
    },
    {
      "name": "import-yield-data",
      "description": "Import and clean yield monitor data",
      "command": "python3 scripts/yield_processor.py",
      "params": ["input_file", "field_id"]
    },
    {
      "name": "generate-yield-map",
      "description": "Generate yield map from cleaned data",
      "command": "python3 scripts/yield_map.py",
      "params": ["field_id", "output_format"]
    },
    {
      "name": "calculate-roi",
      "description": "Calculate ROI for precision practices",
      "command": "python3 scripts/roi_calculator.py",
      "params": ["season", "fields"]
    },
    {
      "name": "export-data",
      "description": "Export data in various formats",
      "command": "python3 scripts/data_export.py",
      "params": ["data_type", "format", "output_path"]
    },
    {
      "name": "backup-data",
      "description": "Backup all precision data",
      "command": "python3 scripts/backup.py",
      "params": ["backup_location"]
    },
    {
      "name": "import-weather",
      "description": "Import weather data from API",
      "command": "python3 scripts/weather.py",
      "params": ["start_date", "end_date", "api_provider"]
    },
    {
      "name": "test-system",
      "description": "Run system diagnostic tests",
      "command": "scripts/test.sh",
      "params": ["test_type"]
    }
  ],

  "capabilities": [
    "GPS guidance and auto-steering",
    "Variable rate application (VRA)",
    "Field boundary mapping",
    "Yield monitoring and mapping",
    "Equipment monitoring",
    "Section control",
    "Weather data integration",
    "ROI analysis",
    "Multi-year analysis",
    "Data export and backup"
  ],

  "configuration": {
    "default_gps_correction": "waas",
    "default_map_projection": "EPSG:3857",
    "default_export_format": "shapefile",
    "log_level": "info",
    "offline_mode": true,
    "auto_backup": true
  },

  "api_endpoints": {
    "weather": {
      "openmeteo": "https://api.open-meteo.com/v1",
      "noaa": "https://www.ncdc.noaa.gov/cdo-web/api/v2"
    },
    "imagery": {
      "sentinel_hub": "https://services.sentinel-hub.com",
      "planet": "https://api.planet.com"
    }
  },

  "documentation": {
    "main": "SKILL.md",
    "examples": [
      "examples/field-boundary-setup.md",
      "examples/guidance-line-creation.md",
      "examples/prescription-map-example.md",
      "examples/yield-analysis-workflow.md",
      "examples/roi-calculation.md"
    ],
    "references": [
      "references/iso11783-standard.md",
      "references/gps-best-practices.md",
      "references/roi-research.md"
    ]
  },

  "roi_targets": {
    "grain_farms": {
      "range": "$15,000-$25,000/year",
      "payback_period": "6-12 months"
    },
    "vegetable_farms": {
      "range": "$8,000-$12,000/year",
      "payback_period": "4-8 months"
    },
    "mixed_crop": {
      "range": "$12,000-$18,000/year",
      "payback_period": "8-14 months"
    }
  },

  "troubleshooting": {
    "common_issues": [
      "GPS not acquiring fix",
      "RTK not obtaining fix",
      "GPS accuracy degrading",
      "ISOBUS implement not recognized",
      "Section control not working",
      "Yield data errors"
    ],
    "see_also": "SKILL.md#troubleshooting"
  }
}
