# Field History Intelligence Environment Variables

# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Database Configuration
# ============================================

# Path to SQLite database
DATABASE_PATH=/opt/field-history/field-data.db

# Backup directory
BACKUP_PATH=/opt/field-history/backups

# Enable automatic backups
# true: Create automatic backups at specified interval
# false: Manual backups only
AUTO_BACKUP_ENABLED=true

# Backup interval (daily, weekly, monthly)
AUTO_BACKUP_INTERVAL=daily

# Number of backups to retain
BACKUP_RETENTION=30

# ============================================
# Data Import Settings
# ============================================

# Directory for import files
IMPORT_DIR=/opt/field-history/imports

# Enable OCR for image-to-text extraction
# Requires Tesseract OCR installed
IMAGE_OCR_ENABLED=true

# Enable PDF text extraction
PDF_EXTRACTION_ENABLED=true

# Default CSV delimiter (comma, semicolon, tab)
CSV_DELIMITER=comma

# Handle duplicate records on import
# skip: Skip duplicate records
# update: Update existing records
# error: Fail on duplicate
DUPLICATE_HANDLING=skip

# ============================================
# Weather Data
# ============================================

# Weather data API key (optional)
# Get from NOAA, OpenWeatherMap, etc.
WEATHER_API_KEY=

# Weather data source
# noaa: NOAA Climate Data Online
# openweathermap: OpenWeatherMap API
# weather_gov: National Weather Service API
WEATHER_SOURCE=noaa

# Default field location for weather data
DEFAULT_LATITUDE=41.8781
DEFAULT_LONGITUDE=-87.6298

# Weather station ID (if known)
WEATHER_STATION_ID=

# Weather data update interval (hours)
WEATHER_UPDATE_INTERVAL=24

# ============================================
# Analysis Settings
# ============================================

# Unit system for analysis
# imperial: Acres, bushels, pounds, Fahrenheit
# metric: Hectares, tonnes, kilograms, Celsius
DEFAULT_UNIT_SYSTEM=imperial

# Currency for financial analysis
CURRENCY=USD

# Number of years of history to analyze by default
ANALYSIS_DEPTH=5

# Minimum years of data required for trend analysis
MIN_YEARS_FOR_TREND=3

# Confidence interval for predictions (0.0 to 1.0)
CONFIDENCE_INTERVAL=0.95

# ============================================
# Visualization Settings
# ============================================

# Chart output format (png, jpg, svg, pdf)
CHART_FORMAT=png

# Chart DPI (resolution)
CHART_DPI=150

# Chart default width (pixels)
CHART_WIDTH=1200

# Chart default height (pixels)
CHART_HEIGHT=800

# Map style (satellite, terrain, streets, dark)
MAP_STYLE=satellite

# Color scheme (default, colorblind, pastel, vibrant)
COLOR_SCHEME=default

# ============================================
# Export Settings
# ============================================

# Default export format (csv, json, excel, pdf)
EXPORT_FORMAT=csv

# Include images in exports (may increase file size)
EXPORT_INCLUDE_IMAGES=true

# Export date format
EXPORT_DATE_FORMAT=%Y-%m-%d

# Include database schema in exports
EXPORT_INCLUDE_SCHEMA=false

# ============================================
# Logging Configuration
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log file path
LOG_FILE=/var/log/field-history-intelligence.log

# Maximum log file size (MB)
LOG_MAX_SIZE=100

# Number of log files to rotate
LOG_ROTATION=5

# Log database queries (verbose)
LOG_DATABASE_QUERIES=false

# ============================================
# Notification Settings
# ============================================

# Enable notifications
# true: Send notifications for important events
# false: No notifications
NOTIFICATION_ENABLED=false

# Email for notifications
NOTIFICATION_EMAIL=

# Phone for SMS notifications (if supported)
NOTIFICATION_SMS=

# SMTP server for email notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=Field-History <noreply@farmfriendlabs.com>
SMTP_USE_TLS=true

# Notification types to enable
NOTIFY_IMPORT_ERRORS=true
NOTIFY_ANALYSIS_COMPLETE=false
NOTIFY_BACKUP_COMPLETE=false
NOTIFY_ANOMALIES_DETECTED=true

# ============================================
# Data Validation
# ============================================

# Strict data validation mode
# true: Reject invalid data
# false: Warn but accept invalid data
STRICT_VALIDATION=true

# Minimum yield value (bushels/acre)
MIN_YIELD=0

# Maximum yield value (bushels/acre) - alerts if exceeded
MAX_YIELD=500

# Minimum input rate
MIN_INPUT_RATE=0

# Maximum input rate (alerts if exceeded)
MAX_INPUT_RATE=1000

# Validate dates are within reasonable range
VALIDATE_DATE_RANGES=true

# ============================================
# Performance Settings
# ============================================

# Maximum records to process in single operation
MAX_BATCH_SIZE=10000

# Database query timeout (seconds)
QUERY_TIMEOUT=300

# Enable database query caching
ENABLE_QUERY_CACHE=true

# Cache expiration (seconds)
CACHE_EXPIRATION=3600

# ============================================
# Security Settings
# ============================================

# Enable database encryption
DATABASE_ENCRYPTION=false

# Encryption key path (if encryption enabled)
ENCRYPTION_KEY_PATH=/opt/field-history/.encryption_key

# Require password for database access
REQUIRE_PASSWORD=false

# Session timeout (minutes)
SESSION_TIMEOUT=60

# ============================================
# API Settings (Optional)
# ============================================

# Enable API access for external tools
API_ENABLED=false

# API server port
API_PORT=8080

# API authentication token
API_TOKEN=

# Allowed API origins (CORS)
API_ALLOWED_ORIGINS=

# ============================================
# Integration Settings
# ============================================

# Integration with other farm software
INTEGRATION_JD=false
INTEGRATION_CASEIH=false
INTEGRATION_AGCO=false

# JD Operations Center API credentials (if enabled)
JD_API_KEY=
JD_API_SECRET=
JD_APP_ID=

# Case IH AFS API credentials (if enabled)
CASE_API_KEY=
CASE_API_SECRET=

# AGCO Fuse API credentials (if enabled)
AGCO_API_KEY=
AGCO_API_SECRET=

# ============================================
# Advanced Settings
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Debug mode (additional logging and validation)
DEBUG_MODE=false

# Verbose output
VERBOSE=false

# Dry run mode (no actual changes)
DRY_RUN=false

# Test mode (use sample data)
TEST_MODE=false
