{
  "name": "one-screen-mission-control",
  "version": "1.0.0",
  "description": "Single-screen operations control center with real-time farm status and alerts",
  "author": "FarmFriend Terminal Labs",
  "license": "MIT",
  "category": "Tier 2 - Mid-Size Production Farms",
  "keywords": [
    "dashboard",
    "operations-control",
    "real-time",
    "alerts",
    "KPI"
  ],

  "dependencies": [
    {
      "name": "python3",
      "version": ">= 3.8",
      "required": true
    },
    {
      "name": "streamlit",
      "version": ">= 1.20",
      "required": true
    },
    {
      "name": "pandas",
      "version": ">= 1.3",
      "required": true
    },
    {
      "name": "plotly",
      "version": ">= 5.0",
      "required": false
    },
    {
      "name": "requests",
      "version": ">= 2.26",
      "required": false
    },
    {
      "name": "APScheduler",
      "version": ">= 3.9",
      "required": false
    }
  ],

  "tools": [
    {
      "name": "start-dashboard",
      "description": "Launch the mission control dashboard",
      "command": "streamlit run dashboard.py"
    },
    {
      "name": "configure-layout",
      "description": "Configure dashboard layout and zones",
      "command": "python3 scripts/configure_layout.py"
    },
    {
      "name": "set-alert",
      "description": "Configure alert rules and thresholds",
      "command": "python3/scripts/set_alert.py"
    },
    {
      "name": "add-quick-action",
      "description": "Add quick action button to dashboard",
      "command": "python3/scripts/add_quick_action.py"
    },
    {
      "name": "test-data-source",
      "description": "Test connection to data source",
      "command": "python3/scripts/test_data_source.py"
    },
    {
      "name": "export-config",
      "description": "Export dashboard configuration",
      "command": "python3/scripts/export_config.py"
    },
    {
      "name": "import-config",
      "description": "Import dashboard configuration",
      "command": "python3/scripts/import_config.py"
    },
    {
      "name": "backup-dashboard",
      "description": "Backup dashboard settings",
      "command": "python3/scripts/backup.py"
    }
  ],

  "dashboard_zones": [
    "alerts",
    "equipment",
    "weather",
    "fields",
    "tasks",
    "inventory",
    "map",
    "kpis",
    "finance",
    "communication"
  ],

  "data_sources": [
    "field_history_db",
    "weather_api",
    "equipment_systems",
    "inventory_db",
    "task_manager",
    "financial_data"
  ],

  "configuration": {
    "default_theme": "light",
    "refresh_interval": 30,
    "alert_sound_enabled": true,
    "auto_backup_enabled": true
  },

  "documentation": {
    "main": "SKILL.md",
    "examples": [
      "examples/dashboard-setup.md",
      "examples/alert-configuration.md",
      "examples/custom-zones.md"
    ]
  },

  "troubleshooting": {
    "common_issues": [
      "Dashboard not updating",
      "Alerts not triggering",
      "Slow performance",
      "Data source connection failed"
    ],
    "see_also": "SKILL.md#troubleshooting"
  }
}
